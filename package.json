{
  "name": "plantgrower",
  "version": "1.0.0",
  "description": "AR Plant Growing App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.kasper.plantgrower",
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns", 
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "PlantGrower needs camera access to track your hand movements."
      }
    },
    "files": [
      "**/*",
      "!venv",
      "!dist",
      "!plantgrower.py",
      "!*.spec",
      "!build" 
    ],
    "extraResources": [
      {
        "from": "dist/plantgrower",
        "to": "plantgrower"
      }
    ]
  }
}