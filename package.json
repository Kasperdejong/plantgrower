{
  "name": "handpuppets",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0"
  },
"build": {
    "appId": "com.kasper.handpuppets",
    "directories": {
      "buildResources": "build"
    },
    "icon": "build/handpuppet_idle.icns",
    "mac": {
      "target": "dmg",
      "icon": "build/handpuppet_idle.icns", 
      "identity": null,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Hand Puppets needs the camera to track your movements."
      }
    },
    "files": [
      "**/*",
      "!venv",
      "!dist",
      "!handpuppets.py",
      "!*.spec",
      "!build" 
    ],
    "extraResources": [
      {
        "from": "dist/handpuppets",
        "to": "handpuppets"
      }
    ]
  }
}
